#include <stdio.h>

int main() {
    FILE *fptr;
    int count = 0;
    fptr = fopen("count.txt", "r");
    if (fptr != NULL) {
        fscanf(fptr, "%d", &count);
        fclose(fptr);
    }

    count++; 
    fptr = fopen("count.txt", "w");
    fprintf(fptr, "%d", count);
    fclose(fptr);

    printf("This is execution number %d.\n", count);

    return 0;
}
