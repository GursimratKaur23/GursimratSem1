#include <stdio.h>

int main()
{
    int arr[100],n,i,j,sum=0,sum1=0;
    printf("enter number of elements: ");
    scanf("%d", &n);
    printf("Enter %d elements: ", n);
    for (i=0;i<n;i++){
        scanf("%d", &arr[i]);
    }
    for(i=0;i<n;i++){
            if (arr[i]%2==0){
                sum=sum+arr[i];
            }
            else{
                sum1=sum1+arr[i];
            }
        }
        printf("sum of even elements: %d ",sum);
        printf("sum of odd elements: %d ",sum1);
        return 0;
}
