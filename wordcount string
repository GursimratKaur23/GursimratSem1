#include <stdio.h>

int main()
{
    char str[100];
    int i,wc=0;
    printf("enter a string");
    fgets(str,sizeof(str),stdin);
    for(i=0;str[i]!='\0';i++){
        if(str[i]==' '|| str[i]=='\n'|| str[i]=='\t'){
            wc++;
        }
    }
    if(i>0 && str[i-1]!=' ' && str[i-1]!='\n' && str[i-1]!='\t'){
        wc++;
    }
    printf("Total number of words in the string:%d\n",wc);
    return 0;
}
