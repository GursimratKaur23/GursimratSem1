#include <stdio.h>

int main() 
{
    FILE *file;
    char ch;
    int count = 0;

    file = fopen("input.txt", "r"); 
    if (file == NULL) {
        printf("File not found.\n");
        return 0;
    }

    while ((ch = fgetc(file)) != EOF) {
        if (ch == ' ') {
            count++;    
        }
    }

    fclose(file);   

    printf("Total number of spaces in the file: %d\n", count);
    return 0;
}
